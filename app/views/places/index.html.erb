<% if @current_user %>
  <h1>Places</h1>

  <ul>
    <% for place in @places %>
    <div class=>
      <li><a href="/places/<%= place["id"] %>"><%= place["name"] %></a></li>
    <% end %>
  </ul>

  <p>
    <a href="/places/new" class= "btn btn-success">New place</a>
  </p>
  <% else %>
    You must first login to view.
  <% end %>