

<% if @current_user %>

  <h1><%= @place["name"] %></h1>
   <p>

    <a class="btn btn-primary" href="/entries/new?place_id=<%= @place["id"] %>"> New Entry</a>
  </p>

  <h2>My Entries</h2>
  <div class="row">
    <% for entry in @entries %>
      <div class="col-md-4">
        <h3><%= entry["title"] %></h3>
        <h4><%= entry["occurred_on"] %></h4>
        <p><%= entry["description"] %></p>
      </div>
    
     

    <%# conditionally display attached file if post.uploaded_image.attached? %>
      <% if entry.uploaded_image.attached? %>
        <%# use url_for(post.uploaded_image) as attached file's url %>
        <img src="<%= url_for(entry.uploaded_image) %>" class="img-fluid">
      <% else %>
        <%# otherwise display original image url from database column %>
        <img src="<%= entry["image"] %>" class="img-fluid">
      <% end %>
    </div>
  <% end %> 
  <p>
    <a class="btn btn-outline-dark" href="/places">Back to All Places</a>
  </p>
 <% else %>
  You must first login to view.

<% end %>